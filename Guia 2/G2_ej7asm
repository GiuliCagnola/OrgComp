#GUÍA 2 EJERCICIO 7

#Implemente un programa en ensamblador que determine si un número es positivo, negativo o cero 
#y almacene un valor en memoria según el resultado

.data
n: .word -5
signo: .word 0 #positivo: 1 - negativo: -1 - cero: 0

.text
.globl main
main:
	lw t0, n
	
	#comparación
	beqz t0, is_zero #t0=0
	blt t0, x0, is_negative #t0<0
	
	is_positive:
		li t1, 1
		j save
	
	
	is_negative:
		li t1, -1
		j save
	
	is_zero:
		li t1, 0 
	
	save:
		la t2, signo
		sw t1, 0(t2)
li a7, 10   
ecall
	
	